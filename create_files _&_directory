#cat command - no edit
#crete_files
        cat>file1  ---- "hello techie"  >>>ctrl+d
        ls ---- list files
#adding in exiting file
        cat>>file1   -------"how are you?"
#adding data from exiting file
        cat file1 file2 > filex
        cat filex     (see filex data)
#content button to top
         tac file1



#touch command use for create empty file , change all time stamps of a file , update access time of a file , modify time 

#create multiple empty file 
     touch file1 file2 file2
#access time change
     touch -a file1
#modify time 
     touch -m file1



#vi editor (text editor)
#:w -- save , :wq -- save and quit , :x -- save and quit , :q --quit ,  :q! --force quit without saving 
   vi file1   #(press I for insert)



ls -l  ----> long listing
ls -a  ----> all files with hidden files also
ls -la ---->long listing with hidden files 


#create directory 
    mkdir dir1 
#create multiple directory 
    mkdir dir2/ dir3/ dir4
#change directory 
   cd dir1
pwd ---->print working directory 
#exit current directory
 cd ..
#exit parent directory
 cd ../../



#hidden file 
  touch .filex
#hidden directory 
  mkdir .dirx

#copy file (cp), move file (mv) , rename file (mv)
   cp source destination
   cp file1 file2
   mv file1 file2

